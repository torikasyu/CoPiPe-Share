{
  "name": "blob-uploader",
  "version": "1.0.0",
  "description": "Azure Blob Storageにファイルをアップロードするデスクトップアプリケーション",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:webpack\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/main/index.js dist/renderer.js && electron .",
    "build": "npm run build:ts && npm run build:webpack",
    "build:ts": "tsc",
    "build:webpack": "webpack --config webpack.config.js",
    "watch:ts": "tsc -w",
    "watch:webpack": "webpack --config webpack.config.js --watch",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.torikasyu.blobuploader",
    "productName": "Blob Uploader",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "package.json",
      "index.html"
    ]
  },
  "author": "torikasyu",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "canvas": "^3.1.0",
    "concurrently": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "wait-on": "^7.0.1",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.27.0",
    "@effect/io": "^0.41.2",
    "@types/styled-components": "^5.1.34",
    "effect": "^2.0.0-next.54",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.1",
    "styled-components": "^6.1.18",
    "uuid": "^11.1.0"
  }
}
