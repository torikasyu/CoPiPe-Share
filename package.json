{
  "name": "blob-uploader3",
  "version": "0.1.0",
  "description": "Azure Blob Storageにファイルをアップロードするデスクトップアプリケーション",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:webpack\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/main/index.js dist/renderer.js && electron .",
    "build": "npm run build:ts && npm run build:webpack",
    "build:ts": "tsc",
    "build:webpack": "webpack --config webpack.config.js",
    "watch:ts": "tsc -w",
    "watch:webpack": "webpack --config webpack.config.js --watch"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.0.1",
    "electron": "^28.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "wait-on": "^7.0.1",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.27.0",
    "@effect/io": "^0.41.2",
    "effect": "^2.0.0-next.54",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^11.1.0"
  }
}
